<Window x:Class="GraphicsAdapter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsAdapter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseDown="Window_MouseDown">
    <Grid>
        <Canvas Name="cvSurface"
                MouseDown="cvSurface_MouseLeftButtonDown"></Canvas>
        <Frame x:Name="frmMain"></Frame>
    </Grid>
</Window>
